      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3 form-group">
    <%= form.label :total_amount %>
    <%= form.text_field :total_amount, class: "form-control" %>
  </div>

  <div class="mt-3 form-group">
    <%= form.label :date_of_invoice %>
    <%= form.datetime_field :date_of_invoice, class: "form-control" %>
  </div>

  <div class="mt-3 form-check">
    <%= form.label :foreign_investment, for: "foreign_investment", class: "form-check-label" %>
    <%= form.check_box :foreign_investment, id: "foreign_investment", class: "form-check-input" %>
  </div>

  <div class="form-actions mt-3">
    <%= form.submit :class => "btn btn-dark" %>
  </div>
<% end %>
